<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView_name_user_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="João Vieira"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textView_name_trail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trilha do Morro Azul"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="2dp"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/textView_data_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 30/06/2025"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_time_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏱ Tempo: 00:32:18"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_distance_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📏 Distância: 1340.5 m"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_steps_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👟 Passos: 1760"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_max_height_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏔 Altitude Máxima: 82.3 m"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
